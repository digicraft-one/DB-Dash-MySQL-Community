{
    "name": "dbdash-community",
    "version": "1.0.0",
    "description": "DBDash Community - MySQL Desktop Dashboard",
    "main": "main.js",
    "scripts": {
        "install:frontend": "cd frontend && npm i",
        "install:backend": "cd backend && npm i",
        "setup": "npm i && npm run install:frontend && npm run install:backend",
        "start": "electron .",
        "dev": "electron .",
        "postinstall": "electron-rebuild",
        "build": "electron-builder",
        "build:win": "electron-builder --win --x64 --ia32",
        "build:mac": "electron-builder --mac --x64 --arm64",
        "build:linux": "electron-builder --linux",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "electron",
        "mysql",
        "dashboard",
        "database",
        "client",
        "desktop"
    ],
    "author": {
        "name": "DigiCraft",
        "email": "hello@digicraft.one",
        "url": "https://digicraft.one"
    },
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "electron": "^25.9.8",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9"
    },
    "build": {
        "appId": "com.digicraft.dbdash-community",
        "productName": "DBDash Community",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "icon": "assets/icons/icon",
        "asar": true,
        "asarUnpack": [
            "**/backend/**",
            "**/config/**"
        ],
        "files": [
            "main.js",
            "dashboard.js",
            "dashboard.html",
            "package.json",
            "assets/**/*",
            "backend/**/*",
            "!backend/logs/**",
            "!backend/.gitignore",
            "!backend/package-lock.json",
            "config/**/*",
            "frontend/**/*",
            "!frontend/logs/**",
            "!frontend/.gitignore",
            "!frontend/package-lock.json",
            "!frontend/eslint.config.js",
            "!frontend/README.md",
            "!frontend/src/.prettierrc",
            "utils/**/*",
            "!**/*.log",
            "!.gitignore",
            "!.prettierrc",
            "!package-lock.json"
        ],
        "extraResources": [
            {
                "from": "dashboard.js",
                "to": "app/dashboard.js"
            },
            {
                "from": "dashboard.html",
                "to": "app/dashboard.html"
            },
            {
                "from": "config",
                "to": "app/config"
            },
            {
                "from": "assets",
                "to": "app/assets"
            },
            {
                "from": "frontend",
                "to": "app/frontend"
            },
            {
                "from": "backend",
                "to": "app/backend"
            },
            {
                "from": "utils",
                "to": "app/utils"
            }
        ],
        "win": {
            "target": [
                "nsis",
                "portable",
                "zip",
                "msi"
            ],
            "icon": "assets/icons/icon.ico",
            "artifactName": "${productName}-v${version}-setup-${arch}.${ext}",
            "publisherName": "DigiCraft"
        },
        "mac": {
            "target": [
                "dmg",
                "pkg",
                "zip"
            ],
            "icon": "assets/icons/icon.icns",
            "artifactName": "${productName}-v${version}-setup-${arch}.${ext}"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "snap",
                "tar.gz"
            ],
            "icon": "assets/icons/icon.png",
            "artifactName": "${productName}-v${version}-setup-${arch}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "DBDash Community",
            "installerIcon": "assets/icons/icon.ico",
            "uninstallerIcon": "assets/icons/icon.ico",
            "uninstallDisplayName": "Uninstall DBDash Community"
        }
    }
}
