{
  "name": "sql-dashboard",
  "version": "1.0.0",
  "description": "SQL Dashboard Control Panel",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:frontend": "cd frontend && npm run build",
    "package": "npm run build:frontend && electron-builder",
    "dist": "npm run package",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "DigiCraft",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.example.sqldashboard",
    "productName": "SQL Dashboard Panel",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "dashboard.html",
      "dashboard.js",
      "package.json",
      "config/",
      "assets/",
      "backend/",        
      "!backend/logs",  
      "!backend/.gitignore",
      "frontend/dist/" 
    ],
    "extraResources": [
        { 
            "from": "node_modules/node-pty/build/Release/", 
            "to": "node_modules/node-pty/build/Release/", 
            "filter": ["*.node"] 
        }
    ],
    "win": {
      "target": "nsis", 
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": false
  },
  "dependencies": {
    "ansi-to-html": "^0.7.2"
  }
}
